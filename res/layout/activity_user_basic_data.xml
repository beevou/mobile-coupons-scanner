<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserBasicData"
    android:background="#256e7d" >
    
    
    

    

<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >     
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >




    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:orientation="vertical"
        android:padding="5dip" >

        
        <com.beevou.android.widgets.BeevouEditFormTop
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/androidform_13" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="8" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/androidform_15" >
            </RelativeLayout>
        </LinearLayout>

        
        <com.beevou.android.widgets.BeevouEditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.beevou.android.widgets.BeevouEditText
            android:id="@+id/emailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.beevou.android.widgets.BeevouEditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditText
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditDate
            android:id="@+id/birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.beevou.android.widgets.BeevouEditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditText
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.beevou.android.widgets.BeevouEditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditText
            android:id="@+id/postalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		<com.beevou.android.widgets.BeevouEditSearch
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        
        



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/androidform_13" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="8" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="150dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/grey_button"
                        android:text="@string/save"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/androidform_15" >
            </RelativeLayout>
        </LinearLayout>

        <com.beevou.android.widgets.BeevouEditFormBottom
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
 </LinearLayout>
    
</ScrollView>

</RelativeLayout>